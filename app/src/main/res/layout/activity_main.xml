<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fondoOperacion"
        android:layout_width="446dp"
        android:layout_height="381dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/fondoNumeros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.825">

        <TextView
            android:id="@+id/textHistorial"
            android:layout_width="381dp"
            android:layout_height="53dp"
            android:layout_marginTop="84dp"
            android:text=""
            android:gravity="bottom|end"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.565"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textResultado"
            android:layout_width="394dp"
            android:layout_height="137dp"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="77dp"
            android:autoSizeMaxTextSize="56sp"
            android:autoSizeMinTextSize="24sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:ellipsize="end"
            android:gravity="bottom|end"
            android:maxLines="1"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textHistorial"
            app:layout_constraintVertical_bias="0.314" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fondoNumeros"
        android:layout_width="0dp"
        android:layout_height="497dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861">

        <TableLayout
            android:id="@+id/tableCalc"
            android:layout_width="344dp"
            android:layout_height="483dp"
            android:layout_marginEnd="5dp"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tabelCalc2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonSiete"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="7"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonOcho"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="8"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonNueve"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="9"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonSuma"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="+"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonCuatro"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="4"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonCinco"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="5"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonSeis"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="6"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonResta"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="-"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonUno"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="1"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonDos"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="2"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonTres"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="3"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonMultiplica"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="*"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="86dp">

                <Button
                    android:id="@+id/buttonPunto"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="."
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonCero"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="0"
                    android:textSize="24sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/buttonPotencia"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="^"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonDivide"
                    android:layout_width="82dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="/"
                    android:textSize="24sp" />

            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/tabelCalc2"
            android:layout_width="88dp"
            android:layout_height="0dp"
            android:layout_marginTop="14dp"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonLimpiar"
                    android:layout_width="84dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="C"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="29dp">

                <Button
                    android:id="@+id/buttonDel"
                    android:layout_width="84dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="DEL"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonModulo"
                    android:layout_width="84dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="%"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonIgual"
                    android:layout_width="84dp"
                    android:layout_height="115dp"
                    android:layout_margin="2dp"
                    android:text="="
                    android:textSize="24sp" />
            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>